
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(cuid()) @map("_id") @db.ObjectId
  username    String?
  email       String  @unique
  password    String
  phone_no    String  // Changed from Int to String to allow different formats
  user_image  String
  user_status UserStatus  // Changed to enum for more control
}

enum UserStatus {
 normal
 pro
}
